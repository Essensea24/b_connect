<h1>Your Blogs</h1>
<div>
<%= link_to 'Create a New Blog', new_user_blog_path %>
</div>

<table>
  <tr>
    <th>Title</th>
    <th>Country</th>
    <th>Description</th>
  </tr>
 
  <% @blogs.each do |b| %>
    <tr>
      <td><%= b.title %></td>
      <td><%= b.country %></td>
      <td><%= b.description %></td>
      <td><%= link_to 'Show', user_blog_path(@user.id, :blog) %></td>
      <td><%= link_to 'Delete', user_blog_path(@user.id, :blog),
              method: :delete,
              data: { confirm: 'Are you sure you want to delete?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Back', user_path(@user) %>
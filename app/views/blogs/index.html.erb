<div class = "all_blogs" >
<h1> All Blogs</h1>

<%= notice %>
  

<div>
<% if current_user %>
  <%= link_to 'Create a New Blog', new_user_blog_path(current_user.id), class: "btn btn-s btn-success" %>
  </div>

  <table>
    <tr>
      <th>Title</th>
      <th>Country</th>
      <th>Description</th>
    </tr>
   
    <% @blogs.each do |b| %>
      <tr>
        <td><%= b.title %></td>
        <td><%= b.country %></td>
        <td><%= b.description %></td>
     
       
         <td><%= link_to 'Show', [b], class: "btn btn-s btn-success"%></td>
        <% if current_user.id == b.user_id%>
        <td><%= link_to "Edit ", edit_blog_path(b.id), class: "btn btn-s btn-success" %></td>
          <td><%= link_to 'Delete', [b],
                  method: :delete, class: "btn btn-s btn-success",
                  data: { confirm: 'please login to delete this post' } %></td>
            <% end %>
          </tr>
      <% end %>
      </table>

<%= link_to 'Back', user_path(current_user.id), class: "btn btn-s btn-success" %>
<%= link_to "Log Out", logout_path, method: :delete, class: "btn btn-s btn-success" %>

<% else %>
<table>
  <tr>
    <th>Title</th>
    <th>Country</th>
    <th>Description</th>
  </tr>

<% @blogs.each do |b| %>
  <tr>
    <td><%= b.title %></td>
    <td><%= b.country %></td>
    <td><%= b.description %></td>
    <td><%= link_to 'Show', [b], class: "btn btn-s btn-primary" %></td>
  </tr>
  <% end %>
</table>
<div class = "buttons">
 <li><%= link_to "Sign Up", new_user_path, class: "btn btn-lg btn-success" %></li>
 </div>

<% end %>

</div>



<h2>Blogs</h2>
  <table>
  <tr>
    <th>Title</th>
    <th>Country</th>
    <th>Description</th>
  </tr>
 
  <% @user.blogs.each do |b| %>
    <tr>
      <td><%= b.title %></td>
      <td><%= b.country %></td>
      <td><%= b.description %></td>
      <td><%= image_tag b.image.url(:large) %></td>
      <td><%= link_to 'Show', [b] %></td>

    </tr>
    <% end %>
</table>

<h2>Add a new blog</h2>
  <%= link_to "New Blog", new_user_blog_path(current_user.id) %>